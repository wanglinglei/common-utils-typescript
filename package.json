{
  "name": "common-utils-typescript",
  "version": "0.0.1-dev",
  "description": "基于typescript的公共工具函数库",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "vitest --ui",
    "doc": "ts-node build/index.ts",
    "prepare": "husky install",
    "lint": "npx eslint",
    "doctoc": "doctoc README.md"
  },
  "files": [
    "dist/*",
    "packages/*"
  ],
  "keywords": [
    "typescript",
    "javascript",
    "utils",
    "browser"
  ],
  "exports": {
    ".": {
      "import": "./packages/index.ts",
      "types": "./packages/index.d.ts"
    },
    "./packages/*": {
      "import": "./packages/*/index.ts",
      "types": "./packages/*/index.d.ts"
    }
  },
  "author": "wanglinglei",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@eslint/js": "^9.8.0",
    "@vitest/ui": "^2.0.4",
    "husky": "^8.0.1",
    "ts-morph": "^23.0.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.4"
  },
  "dependencies": {
    "dayjs": "^1.11.12"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "packages/*.ts": [
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
