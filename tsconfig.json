{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "customConditions": [
      "module"
    ],
    "types": [
      "node"
    ],
    "declaration": true,
    "outDir": "./dist",
    "allowArbitraryExtensions": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "packages/*"
      ]
    }
  },
  // "include": [
  //   "packages/*",
  // ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/__tests__",
    "**/build"
  ],
  "ts-node": {
    "esm": true
  },
}